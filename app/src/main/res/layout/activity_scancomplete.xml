<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_check"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:padding="12dp"
                android:text="Scan Complete.!"
                android:textColor="@color/icons"
                android:background="@color/primary_dark"
                android:elevation="10dp">

            </android.support.v7.widget.AppCompatButton>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/btn_check"
                android:id="@+id/textlayear"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Verdict: OK!"
                    android:textSize="40sp"
                    android:id="@+id/textView"
                    android:textColor="@color/dark_gray"

                    android:layout_marginBottom="24dp"

                    android:layout_centerHorizontal="true" />
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/level1"
                android:layout_below="@+id/textlayear"

            android:gravity="center">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="@color/cardview_light_background"
                card_view:cardCornerRadius="@dimen/cardview_default_radius"
                card_view:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#0072BC"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="63%"
                        android:id="@+id/calories"
                        android:textColor="#ffffff"
                        android:textSize="35dp"
                        android:maxLength="5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KCalories"
                        android:textColor="#ffffff" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:layout_margin="10dp"
                card_view:cardBackgroundColor="@color/cardview_light_background"
                card_view:cardCornerRadius="@dimen/cardview_default_radius"
                card_view:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#FF0000"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19g"
                        android:id="@+id/fat"
                        android:textColor="#ffffff"
                        android:textSize="35dp"
                        android:maxLength="5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fat"
                        android:textColor="#ffffff" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/level1"
                android:id="@+id/level2"
                android:gravity="center">
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="130dp"
                    android:layout_height="130dp"

                    android:layout_margin="10dp"
                    card_view:cardBackgroundColor="@color/cardview_light_background"
                    card_view:cardCornerRadius="@dimen/cardview_default_radius"
                    card_view:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#39B54A"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75"
                            android:id="@+id/overall"
                            android:textColor="#ffffff"
                            android:textSize="35dp"
                            android:maxLength="5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overall Score"
                            android:textColor="#ffffff" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="130dp"
                    android:layout_height="130dp"

                    android:layout_margin="10dp"
                    card_view:cardBackgroundColor="@color/cardview_light_background"
                    card_view:cardCornerRadius="@dimen/cardview_default_radius"
                    card_view:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#F7941D"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:id="@+id/serve_size"
                            android:textColor="#ffffff"
                            android:textSize="35dp"
                            android:maxLength="5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Serving Size Qty"
                            android:textColor="#ffffff" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/level2"
                android:id="@+id/textlayear2"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Angelhacks Chips - 1 Serving"
                    android:layout_marginTop="20dp"
                    android:id="@+id/brand_name"
                    android:textColor="@color/dark_gray"
                    android:layout_marginBottom="24dp"

                    android:layout_centerHorizontal="true" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>